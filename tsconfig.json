{
  "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ESNext", "WebWorker", "DOM"],
      "baseUrl": "./",
      "jsx": "react",
      "paths": {
        "@ir/*": ["./src/ir/*"],
        "@interpratater/*": ["./src/interpratater/*"],
        "@compiler/*": ["./src/compiler/*"],
        "@text-generation/*": ["./src/text-generation/*"],
        "@components/*": ["./src/components/*"],
        "@consts/*": ["./src/consts/*"],
      }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}